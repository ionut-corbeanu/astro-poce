---
import BaseLayout from '../layouts/BaseLayout.astro'
import Post from "../components/Post.astro";
   
---

<BaseLayout>
	<Post />
</BaseLayout>

<script type="text/partytown" src="https://ws.zoominfo.com/pixel/xuYYjL26ZY6ADV5zoSnP"></script>
<style>
*, html, body{
	margin:0;
	padding:0;
	box-sizing: border-box;
	font-family: Arial, Helvetica, sans-serif;
}
body {
	background-color: #f2f2f2;
}


.container {
  padding-right: 15px;
  padding-left: 15px;
  margin-right: auto;
  margin-left: auto;
}
@media (min-width: 1600px) {
    .container {
        max-width: 1600px;
    }
}
@media (min-width: 1900px) {
    .container {
        max-width: 1900px;
    }
}
@media (min-width: 768px) {
  .container {
    width: 750px;
  }
}
@media (min-width: 992px) {
  .container {
    width: 970px;
  }
}
@media (min-width: 1200px) {
  .container {
    width: 1180px;
  }
}

.container-ta {
	display: flex;
	grid-template-columns: 25em 75em;
}
.left-ta_item-head {
	background-color: #2a6ebb;
    padding-top: 0.5rem;
    padding-bottom: 0.5rem;
    border-radius: 0;
}
.left-ta_item-head span {
	color: white;
	padding-left: 1rem;
	font-size: 1rem;
	font-weight: bold;
}
.left-ta_item-accordion {
	border: 0;
    background: transparent;
    display: block;
    width: 100%;
}
.left-ta_item-accordion-icon {
	display: flex;
    gap: 1rem;
    padding: 1rem;
    align-items: center;
}
.left-ta {
	background: white;
	width: 25rem;
}
.left-ta_item-accordion-icon span {
	margin-right: 5rem;
    text-align: left;
    font-size: 1rem;
    color: #333333;
    font-weight: bold;
}

.left-ta-item-accordion-title svg {
	width: 19px;
}
.left-ta-item-accordion-title {
	display: flex;
    align-items: center;
    margin-left: 3.125rem;
    justify-content: space-between;
	padding-right: 0.6rem;
	margin-top: 10px;
}
.left-ta-item-accordion-title span{
	font-size: 1rem;
}

.right-ta {
	background: white;
	border-left: 1px solid #eee;
	height: 38.75rem;
	flex: 1;
}

</style>