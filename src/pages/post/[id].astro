---
import Post from "../../components/Post.astro";
import Item from "../../components/Item.astro";
const data = [
    { id: 1, title: 'consider home isolation or hospital admission', subtitle: '1st line', description: 'Ibuprofen should only be taken at the lowest effective dose for the shortest period needed to control symptoms. It is not recommended in pregnant women (especially in the third trimester) or children <6 months of age (age cut-offs vary by country).' },
    { id: 2, title: 'monitoring', subtitle: '1st line', description: 'Consider isolating patients with suspected or confirmed asymptomatic or mild to moderate disease.[88][465][738] For disease severity definitions, see Criteria.' },
    { id: 3, title: 'symptom management and supportive care', subtitle: '1st line', description: 'For the management of cough, advise patients to avoid lying on their back as this makes coughing ineffective. Use simple measures first (e.g., a teaspoon of honey in patients aged 1 year and older) to help cough.[530]' }
  ];
export async function getStaticPaths() {
    return [
        {params: {id: '1'} },
        {params: {id: '2'} },
        {params: {id: '3'} }
    ];
}
const {id} = Astro.params
---
<div class="container container-ta">
    <div class="left-ta">
        <div class="left-ta_item">
            <div class="left-ta_item-head">
                <span>INITIAL</span>
            </div>
            <div class="left-ta_item-accordion-icon">
                <svg xmlns="http://www.w3.org/2000/svg" width="20" height="20" viewBox="0 0 20 20" fill="none">
                    <circle cx="10" cy="10" r="10" fill="#333333"/>
                    <path d="M10.0001 9C11.4734 9 12.6667 7.6575 12.6667 6C12.6667 4.3425 11.4734 3 10.0001 3C8.52675 3 7.33341 4.3425 7.33341 6C7.33341 7.6575 8.52675 9 10.0001 9ZM10.0001 10.5C8.22008 10.5 4.66675 11.505 4.66675 13.5V15H15.3334V13.5C15.3334 11.505 11.7801 10.5 10.0001 10.5Z" fill="white"/>
                </svg>
                <span>active epistaxis: major haemorrhage</span>						  
            </div>
            {data.map(item => (
                <Item title={item.title} subtitle={item.subtitle} id={item.id}/>
              ))}
        </div>
    </div>
    <div class="right-ta">
        <Post id={id}/>
    </div>
</div>

<style>
    *, html, body{
        margin:0;
        padding:0;
        box-sizing: border-box;
        font-family: Arial, Helvetica, sans-serif;
    }
    body {
        background-color: #f2f2f2;
    }
    
    
    .container {
      padding-right: 15px;
      padding-left: 15px;
      margin-right: auto;
      margin-left: auto;
    }
    @media (min-width: 1600px) {
        .container {
            max-width: 1600px;
        }
    }
    @media (min-width: 1900px) {
        .container {
            max-width: 1900px;
        }
    }
    @media (min-width: 768px) {
      .container {
        width: 750px;
      }
    }
    @media (min-width: 992px) {
      .container {
        width: 970px;
      }
    }
    @media (min-width: 1200px) {
      .container {
        width: 1180px;
      }
    }
    
    .container-ta {
        display: flex;
        grid-template-columns: 25em 75em;
    }
    .left-ta_item-head {
        background-color: #2a6ebb;
        padding-top: 0.5rem;
        padding-bottom: 0.5rem;
        border-radius: 0;
    }
    .left-ta_item-head span {
        color: white;
        padding-left: 1rem;
        font-size: 1rem;
        font-weight: bold;
    }
    .left-ta_item-accordion {
        border: 0;
        background: transparent;
        display: block;
        width: 100%;
    }
    .left-ta_item-accordion-icon {
        display: flex;
        gap: 1rem;
        padding: 1rem;
        align-items: center;
    }
    .left-ta {
        background: white;
        width: 25rem;
    }
    .left-ta_item-accordion-icon span {
        margin-right: 5rem;
        text-align: left;
        font-size: 1rem;
        color: #333333;
        font-weight: bold;
    }
    
    .left-ta-item-accordion-title svg {
        width: 19px;
    }
    .left-ta-item-accordion-title {
        display: flex;
        align-items: center;
        margin-left: 3.125rem;
        justify-content: space-between;
        padding-right: 0.6rem;
        margin-top: 10px;
    }
    .left-ta-item-accordion-title span{
        font-size: 1rem;
    }
    
    .right-ta {
        background: white;
        border-left: 1px solid #eee;
        height: 38.75rem;
        flex: 1;
    }
    
</style>